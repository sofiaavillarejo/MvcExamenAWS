@model MvcExamenAWS.Models.Comic

@{
    ViewData["Title"] = "CreateComic";
}

<h1>CreateComic</h1>

<h4>Comic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateComic" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Seleccione un fichero</label>
                <input type="file" name="file" class="form-control" />
            </div>

            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary">Subir Cómic</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
